#include <iostream>
using namespace std;
int main()
{
	cout << "=====BASIC CALCULATOR====="  << endl;
	
	int num1, num2;
    char opt;
    
   
    cout << "   Enter First Number: ";
    cin >> num1;
    
    cout << "  Enter Operator Number: ";
    cin >> opt ;
    
    cout << "   Enter Second Number: ";
    cin >> num2;
    
    
    if (opt == '+'){
        cout << " = " << num1 + num2;
        }else if (opt == '-'){
         cout << " = " << num2 - num1;
            }else if (opt == '*'){
          cout << " = " << num1 * num2;
            }else if (opt == '/'){
           cout << " = " << num2 / num1;
            }

      		
}